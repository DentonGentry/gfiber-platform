# /etc/inittab
#
# This inittab is a basic inittab sample for sysvinit, which mimics
# Buildroot's default inittab for Busybox.
id:1:initdefault:

run1:1:wait:/etc/init.d/rcS
# TEST_AGETTY

# Stuff to do for the 3-finger salute
rebo::ctrlaltdel:/sbin/reboot

# Stuff to do before reboot/shutdown
sklo:06:wait:/usr/bin/killall klogd
ssys:06:wait:/usr/bin/killall syslogd
umou:06:wait:/bin/umount -a -r
swap:06:wait:/sbin/swapoff -a

# Actually reboot/shutdown
rebf:6:wait:/sbin/reboot -f
shut:0:wait:/sbin/halt -p -f
